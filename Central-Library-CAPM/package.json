{
    "name": "Central-Library-CAPM",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^7",
        "@sap/cds-hana": "^2",
        "@sap/xssec": "^3",
        "express": "^4"
    },
    "devDependencies": {
        "@cap-js/sqlite": "^1",
        "@sap/cds-dk": "^7",
        "@sap/eslint-plugin-cds": "^3",
        "@sap/eslint-plugin-ui5-jsdocs": "^2.0.5",
        "@sap/ux-specification": "^1.120.10",
        "@sapui5/ts-types": "^1.92.2",
        "eslint": "^7.32.0",
        "rimraf": "^3.0.2"
    },
    "scripts": {
        "start": "cds-serve",
        "watch-central-library": "cds watch --open central-library/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy Central-Library-CAPM --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "cds": {
        "requires": {
            "db": {
                "[devlopment]": {
                    "kind": "sql"
                },
                "[production]": {
                    "kind": "hana"
                }
            },
            "[production]": {
                "auth": "xsuaa"
            },
            "[development]": {
                "auth": {
                    "kind": "mocked",
                    "users": {
                        "subhash@sap.com": {
                            "password": "subhash",
                            "ID": "subhash@sap.com",
                            "roles": [
                                "Admin"
                            ]
                        },
                        "user@sap.com": {
                            "password": "Initial",
                            "ID": "user@sap.com",
                            "roles": [
                                "User"
                            ]
                        }
                    }
                }
            }
        }
    }
}