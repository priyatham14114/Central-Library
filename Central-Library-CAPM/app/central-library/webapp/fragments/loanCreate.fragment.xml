<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <!--  -->
    <Dialog
        id="idNewLoanDialog" 
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Add New Loan"
    >
        <!-- <beginButton />
        <endButton /> -->
        <content>
            <form:SimpleForm
                id="idNewLoanFormToCreate"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idNewLoanUserNameLabel"
                    text="User Name"
                />
                <Input
                    id="idNewLoanUserNameValue"
                    value="{newLoanModel>/user/userName}"
                />
                <Label
                    id="idNewLoanUserIDLabel"
                    text="User ID"
                />
                <Input
                    id="idNewLoanUserIDInput"
                    value="{newLoanModel>/user/userid}"
                />
                <Label
                    id="idNewLoanBookNameLabel"
                    text="Book Title"
                />
                <Input
                    id="idNewLoanBookNameInput"
                    value="{newLoanModel>/user/books/title}"
                />
                <Label
                    id="idNewLoanDueDate"
                    text="Due Date"
                />
                <Input
                    id="idNewLoanDueDateInput"
                    value="{newLoanModel>/dueOn}"
                />
            </form:SimpleForm>
        </content>
        <HBox
            id="idNewLoanHboxCreate"
            class="buttonsHbox"
        >
            <Button
                class="buttons"
                id="idNewLoanSaveButton"
                text="Save"
                press="onSaveNewLoan"
                type="Success"
            />
            <Button
                class="buttons"
                id="idNewLoanCancelButton"
                text="Cancel"
                press="onNewLoanDailogClose"
                type="Negative"
            />
        </HBox>
    </Dialog>
</core:FragmentDefinition>
