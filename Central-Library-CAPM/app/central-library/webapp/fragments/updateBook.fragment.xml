<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
<!-- Fragment not used -->
    <Dialog
        id="idUpdateBookDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Update Book Details"
    >
        <beginButton>
            <Button
                id="idUpdateButton"
                text="Update"
                press="onUpdateBook"
                type="Accept"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelButton"
                text="Cancel"
                press="onCloseLoginDailog"
                type="Negative"
            />
        </endButton>
        <content>
            <form:SimpleForm
                id="idBooksDetailsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idAuthorNameLabel"
                    text="Author Name"
                />
                <Input
                    id="idAuthorName"
                    value="{newBookModel>/authorName}"
                />
                <Label
                    id="idbookNameLabel"
                    text="Book Title"
                />
                <Input
                    id="idbookNameInput"
                    value="{newBookModel>/title}"
                />
                <Label
                    id="idstockLabel"
                    text="Stock"
                />
                <Input
                    id="idStockInput"
                    value="{newBookModel>/quantity}"
                />
                <Label
                    id="idBookISBNLabel"
                    text="ISBN"
                />
                <Input
                    id="idbooks_ISBNInput"
                    value="{newBookModel>/ISBN}"
                />
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>