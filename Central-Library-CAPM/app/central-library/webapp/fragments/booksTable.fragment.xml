<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
>
    <Table
        id="idBooksTable"
        mode="MultiSelect"
        alternateRowColors="true"
        items="{path:'/Books',parameters:{ 
                    $count:true,
                    $$updateGroupId:'booksGroup'     
                     }
                }"
    >
        <headerToolbar>
            <OverflowToolbar id="idBooksTableHeader">
                <!-- text="Availble Stock :{/Books/$count} Books" -->

                <Title
                    id="idTableHeaderTitle"
                    text="Availble Stock"
                />
                <ToolbarSpacer id="idTableHeaderSpacer" />
                <Button
                    id="idBtnEdit"
                    text="Edit"
                    icon="sap-icon://edit"
                    type="Emphasized"
                    press="onEditBook"
                />
                <Button
                    id="idBtnCreate"
                    text="Add"
                    icon="sap-icon://add"
                    tooltip="Add a Record"
                    type="Success"
                    press="onCreateBtnPress"
                />
                <Button
                    id="idBtnDelete"
                    press="onDeleteBooks"
                    icon="sap-icon://delete"
                    tooltip="Delete Record"
                    text="Delete"
                    type="Negative"
                />
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column id="idAuthorCol">
                <Title
                    id="idAuthorColHead"
                    text="Author"
                />
            </Column>
            <Column id="idbookNameCol">
                <Title
                    id="idbookNameColHead"
                    text="Book Title"
                />
            </Column>
            <Column id="idStockCol">
                <Title
                    id="idStockColHead"
                    text="Stock"
                />
            </Column>
            <Column id="idISBNCol">
                <Title
                    id="idISBNColHead"
                    text="ISBN Number"
                />
            </Column>
        </columns>
        <items>
            <ColumnListItem
                id="idBooksTableColListItem"
                type="Navigation"
            >
                <cells>
                    <Text
                        id="AuthorColValueId"
                        text="{authorName}"
                    />
                    <Text
                        id="idBookNameColValue"
                        text="{title}"
                    />
                    <Text
                        id="idStockColValue"
                        text="{quantity}"
                    />
                    <Text
                        id="idISBNColValue"
                        text="{ISBN}"
                    />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>
