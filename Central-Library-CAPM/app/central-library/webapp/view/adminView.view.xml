<mvc:View
    controllerName="com.app.centrallibrary.controller.adminView"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:ui5="sap.ui.webc.main"
>
    <ui5:Toast
        id="demoToast"
        duration="2000"
        height="30%"
        width="30%"
    />
    <f:DynamicPage
        id="booksDataPage"
        headerExpanded="true"
    >
        <f:title>
            <f:DynamicPageTitle id="booksDataPageTitle">
                <f:expandedContent>
                    <Label
                        id="idBooksDataListPage"
                        text="Welcomes you"
                    />
                </f:expandedContent>
                <f:heading>
                    <Title
                        id="idBooksDataPageHeadingTitle"
                        text="Central Library"
                    />
                </f:heading>
                <f:actions>
                    <Avatar
                        id="idAvatar"
                        src="./images/Admin.jpg"
                        badgeTooltip="profile"
                        press="onProfilePress"
                    />
                    <Link
                        class="profileCard"
                        id="idAdminUserID"
                        text="subhash@sap.com"
                    />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader id="idDynamicPageHeader">
                <HBox
                    id="idFilterHLayout"
                    alignContent="SpaceAround"
                    width="100vw"
                >
                    <VBox
                        id="idAuthorFilter"
                        class="sapUiSmallMarginEnd"
                    >
                        <Label
                            id="idAuthorFilterLabel"
                            text="{i18n>Authorlable}"
                        />
                        <MultiInput
                            placeholder="Enter Multiple Inputs"
                            width="100%"
                            showClearIcon="true"
                            id="idAuthorInputValue"
                            showValueHelp="false"
                        />
                    </VBox>
                    <VBox
                        id="idBookNameFilter"
                        class="sapUiSmallMarginEnd"
                    >
                        <Label
                            id="idBookNameFilterLabel"
                            text="{i18n>BookName}"
                        />

                        <MultiInput
                            placeholder="Enter Multiple Inputs"
                            width="100%"
                            showClearIcon="true"
                            id="idTitleInputValue"
                            showValueHelp="false"
                        />
                    </VBox>
                    <VBox
                        id="idFilterButton"
                        class="sapUiSmallMarginEnd"
                    >
                        <Label
                            id="idFilterButtonLabel"
                            text=""
                        />
                        <Button
                            id="idFilterButtonValue"
                            text="Filter"
                            press="onFilterClick"
                        />
                    </VBox>
                    <VBox
                        id="idClearFilterButton"
                        class="sapUiSmallMarginEnd"
                    >
                        <Label
                            id="idClearFilterButtonLabel"
                            text=""
                        />
                        <Button
                            id="idClearFilterButtonValue"
                            text="Clear Filter"
                            press="onClear"
                        />
                    </VBox>
                </HBox>
                <Button
                    class="loanButton"
                    id="idActiveLoansBTN"
                    text="Check Active Loans"
                    press="onActiveLoansClick"
                />
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
        
            <core:Fragment
                type="XML"
                fragmentName="com.app.centrallibrary.fragments.booksTable"
            />

            
        </f:content>
    </f:DynamicPage>
</mvc:View>
